{
  "name": "kards-public-stats",
  "version": "1.0.0",
  "description": "Backend for player stats on kards",
  "homepage": "",
  "bugs": "",
  "contributors": [
    "KlutzyBubbles <LTzilantonis@gmail.com>"
  ],
  "repository": {
    "type": "git",
    "url": ""
  },
  "private": true,
  "scripts": {
    "start": "npm run build && pm2 start pm2.main.json",
    "start:prod": "env-cmd -e prod npm run start",
    "start:test": "env-cmd -e test npm run start",
    "start:dev": "env-cmd -e dev ts-node app.ts",
    "stop": "pm2 stop pm2.main.json",
    "build": "npm run clean && tsc && npm run copy-files",
    "lint": "ts-standard --fix",
    "copy-files": "copyfiles -E **/*.graphql build/",
    "clean": "rimraf build/",
    "publish:test": "env-cmd -e test -x --use-shell \"rover graph introspect http://\\$HOSTNAME:\\$PORT | rover subgraph publish \\$APOLLO_SDL_NAME --name kards-public-stats --routing-url http://\\$HOSTNAME:\\$PORT --convert --schema -\"",
    "publish:dev": "env-cmd -e dev -x --use-shell \"rover graph introspect http://\\$HOSTNAME:\\$PORT | rover subgraph publish \\$APOLLO_SDL_NAME --name kards-public-stats --routing-url http://\\$HOSTNAME:\\$PORT --convert --schema -\"",
    "schema:test": "env-cmd -e test -x --use-shell \"rover graph introspect http://\\$HOSTNAME:\\$PORT\"",
    "generate": "graphql-codegen --config ./graphql-codegen.yml",
    "test": "npm run build && nyc --reporter=html --reporter=text --all jest"
  },
  "ts-standard": {
    "ignore": [
      "tests/**/*.test.ts"
    ]
  },
  "dependencies": {
    "@graphql-tools/schema": "^7.1.5",
    "@kards-stats/kards-tools": "^0.4.6-alpha",
    "connect-timeout": "^1.9.0",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "express": "^4.13.4",
    "express-graphql": "^0.12.0",
    "graphql": "^15.5.0",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.3",
    "nocache": "^3.0.1",
    "pm2": "^5.1.0",
    "q": "^1.5.1",
    "rimraf": "^3.0.2",
    "ts-standard": "^10.0.0",
    "typescript": "^4.3.5",
    "underscore": "^1.13.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@apollo/rover": "^0.1.8",
    "@graphql-codegen/cli": "^1.21.7",
    "@graphql-codegen/typescript": "^1.23.0",
    "@types/connect-timeout": "0.0.35",
    "@types/cors": "^2.8.12",
    "@types/mongoose": "^5.11.97",
    "@types/q": "^1.5.5",
    "@types/underscore": "^1.11.3",
    "env-cmd": "^10.1.0",
    "jest": "^27.0.6",
    "nyc": "^15.1.0",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.1.0"
  }
}
